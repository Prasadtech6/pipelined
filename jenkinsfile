#!groovy

import groovy.json.JsonOutput
import groovy.json.JsonSlurper
node () {
  wrap([$class: 'BuildUser']) {
    def user = env.BUILD_USER_ID
      if  (env.BUILD_USER_ID != 'admin'){
       build()
      }
    else {
       checkout()
       build()
       deploy()
  }
}
     def build () {
         stage 'Build'
          echo "building the job"
}

       def checkout () {
         stage 'Build'
          echo "checking out  the job"
}

       def deploy () {
         stage 'Build'
          echo "deploying the job"
}
}
}
